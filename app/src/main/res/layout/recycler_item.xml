<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="entry"
            type="nz.co.redice.newsfeeder.repository.local.dao.Entry" />
        <variable
            name="fragment"
            type="nz.co.redice.newsfeeder.view.presentation.ListFragment" />
    </data>


<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/item_container"
    android:onClick="@{()->fragment.onRecyclerItemClick(entry.uuid)}"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:imageUrl="@{entry.urlToImage}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@{entry.title}"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/entry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@{entry.publishedAgo}"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:text="@{entry.source}"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

</layout>
